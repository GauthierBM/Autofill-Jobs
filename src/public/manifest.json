{
  "name": "Autofill Jobs",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Fills in annoying job forms for you, with data from your resume & more.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://job-boards.greenhouse.io/*",
    "https://boards.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://app.dover.com/*",
    "https://*.workday.com/*",
    "https://*.myworkdayjobs.com/*",
    "https://jobs.ashbyhq.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": [
        "contentScripts/utils.js",
        "contentScripts/workday.js",
        "contentScripts/customWebsiteAutofill.js",
        "contentScripts/autofill.js",
        "contentScripts/semanticAutofill.js"
      ],
      "matches": [
        "https://job-boards.greenhouse.io/*",
        "https://boards.greenhouse.io/*",
        "https://jobs.lever.co/*",
        "https://app.dover.com/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://jobs.ashbyhq.com/*"
      ],
      "world": "ISOLATED",
      "run_at": "document_end"
    },
    {
      "js": [
        "contentScripts/utils.js",
        "contentScripts/customWebsiteAutofill.js",
        "contentScripts/autofill.js"
      ],
      "matches": ["<all_urls>"],
      "world": "ISOLATED",
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "workers/embedding.worker.js",
        "ort-wasm-simd-threaded.wasm",
        "contentScripts/inputDetector.js",
        "standalone.html",
        "standalone.js",
        "file-upload.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "autofill-jobs@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "personallyIdentifyingInfo": false,
        "healthInfo": false,
        "financialAndPaymentInfo": false,
        "authenticationInfo": false,
        "personalCommunications": false,
        "locationInfo": false,
        "browsingActivity": false,
        "websiteContent": false,
        "websiteActivity": false,
        "searchTerms": false,
        "bookmarksInfo": false,
        "technicalAndInteraction": false
      }
    }
  }
}
